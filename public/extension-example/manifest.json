{
  "manifest_version": 3,
  "name": "쿠팡 윙 스마트 분석기",
  "version": "1.1",
  "key": "",
  "description": "쿠팡 상품 페이지에서 윙 데이터를 분석하여 매출과 수익을 보여줍니다. 웹앱 연동 지원.",
  "permissions": ["activeTab", "cookies"],
  "host_permissions": [
    "https://www.coupang.com/*",
    "https://wing.coupang.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.coupang.com/vp/products/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://*.lovable.app/*",
      "https://*.lovableproject.com/*"
    ]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
